{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Container GUI",
  "version": "1.0.1",
  "identifier": "com.containergui.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Container GUI - Apple Container Management",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2025 Container GUI. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Modern GUI for Apple Container CLI",
    "longDescription": "A modern, intuitive desktop application for managing Apple's container CLI. Features include container lifecycle management, image operations, real-time logs, and system control."
  }
}